<UserControl x:Class="WPF_LoginForm.View.ComprasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f4f6f9" Padding="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Productos para comprar -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Productos para Comprar" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtBuscarProducto" Width="200" VerticalAlignment="Center" TextChanged="TxtBuscarProducto_TextChanged"/>
                <Button Content="Gestionar Proveedores" Click="BtnAgregarProveedor_Click" Margin="10,0,0,0"/>
                <ComboBox x:Name="cbProveedorCompra" Width="200" Margin="10,0,0,0" DisplayMemberPath="Nombre" SelectedValuePath="IdProveedor"/>
            </StackPanel>
            <DataGrid x:Name="dgProductosCompra" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*" />
                    <DataGridTextColumn Header="Precio Compra" Binding="{Binding PrecioCompra}" Width="120" />
                    <DataGridTextColumn Header="Stock" Binding="{Binding Inventario.StockActual}" Width="80" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Agregar al carrito" Click="BtnAgregarAlCarrito_Click" Margin="0,10,0,0" Width="150" Background="#2980b9" Foreground="White"/>
        </StackPanel>
        <!-- Carrito de Compras -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Carrito de Compra" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgCarritoCompra" AutoGenerateColumns="False" CanUserAddRows="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*" />
                    <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="80" />
                    <DataGridTextColumn Header="Precio U" Binding="{Binding PrecioUnitario}" Width="100" />
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="120" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="Total:" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtTotalCompra" FontSize="18" FontWeight="Bold" Margin="5,0,0,0"/>
            <WrapPanel Margin="0,20,0,0">
                <Button Content="Realizar Compra" Click="BtnRealizarCompra_Click" Width="150" Background="#27ae60" Foreground="White"/>
                <Button Content="Limpiar Carrito" Click="BtnLimpiarCarrito_Click" Width="150" Margin="10,0,0,0"/>
                <Button Content="Ver Compras" Click="BtnVerCompras_Click" Width="150" Margin="10,0,0,0" Background="#3498db" Foreground="White"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
