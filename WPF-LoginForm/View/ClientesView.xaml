<UserControl x:Class="WPF_LoginForm.View.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f9fafc" Padding="20">

    <!-- Recursos para estilos modernos - AL INICIO -->
    <UserControl.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Gestión de Clientes" FontSize="28" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,15" Grid.Row="0"/>

        <!-- Tabla Clientes -->
        <DataGrid x:Name="dgClientes" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
          SelectionMode="Single" HeadersVisibility="Column" RowBackground="#e7ebf0" AlternatingRowBackground="White"
          FontSize="14" Margin="0,10,0,10" Grid.Row="1" SelectionChanged="dgClientes_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdCliente}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="CI" Binding="{Binding CI}" Width="100"/>
                <DataGridTextColumn Header="Ítem" Binding="{Binding NumItem}" Width="80"/>
                <DataGridTextColumn Header="Domicilio" Binding="{Binding Domicilio}" Width="150"/>
                <DataGridTextColumn Header="Celular" Binding="{Binding Celular}" Width="100"/>
                <DataGridTextColumn Header="Empresa/Institución" Binding="{Binding EmpresaInstitucion}" Width="150"/>
                <DataGridTextColumn Header="Garante" Binding="{Binding Garante}" Width="120"/>
                <DataGridTextColumn Header="Cel. Garante" Binding="{Binding CelGarante}" Width="100"/>
                <!-- Columnas calculadas para mostrar info de créditos -->
                <DataGridTextColumn Header="Monto Total" Binding="{Binding MontoTotal, StringFormat={}{0:C}}" Width="100"/>
                <DataGridTextColumn Header="Saldo Pendiente" Binding="{Binding SaldoPendiente, StringFormat={}{0:C}}" Width="120"/>
                <DataGridTextColumn Header="Estado Crédito" Binding="{Binding EstadoCredito}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button Content="Agregar Cliente" Padding="12,8" Background="#2980b9" Foreground="White"
                    Click="BtnAgregarCliente_Click" Margin="0,10,10,0" 
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button x:Name="btnEditarCliente" Content="Editar Cliente" Padding="12,8" Background="#27ae60" Foreground="White"
                    Click="BtnEditarCliente_Click" Margin="0,10,10,0" IsEnabled="False"
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button x:Name="btnEliminarCliente" Content="Eliminar Cliente" Padding="12,8" Background="#c0392b" Foreground="White"
                    Click="BtnEliminarCliente_Click" Margin="0,10,10,0" IsEnabled="False"
                    Style="{StaticResource ModernButtonStyle}"/>

            <!-- NUEVO BOTÓN PARA VER DETALLES DE CRÉDITOS -->
            <Button x:Name="btnVerDetalles" Content="Ver Detalles de Créditos" Padding="12,8" Background="#8e44ad" Foreground="White"
                    Click="BtnVerDetalles_Click" Margin="0,10,10,0" IsEnabled="False"
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button x:Name="btnAsignarCredito" Content="Asignar Crédito" Padding="12,8" Background="#e67e22" Foreground="White"
                    Click="BtnAsignarCredito_Click" Margin="0,10,10,0" IsEnabled="False"
                    Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

    </Grid>
</UserControl>