<UserControl x:Class="WPF_LoginForm.View.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f4f6f9" Padding="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel de productos -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Productos Disponibles" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" FontFamily="Segoe UI"/>
            <DockPanel Margin="0,0,0,10">
                <Grid Width="200" Height="30">
                    <TextBox x:Name="txtBuscarProducto"
             VerticalAlignment="Center"
             TextChanged="TxtBuscarProducto_TextChanged"/>
                    <TextBlock x:Name="txtPlaceholder"
               Text="Buscar..."
               Foreground="Gray"
               Margin="5,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               Visibility="Visible"/>
                </Grid>

            </DockPanel>
            <DataGrid x:Name="dgProductosVenta" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      SelectionMode="Single" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding PrecioVenta}" Width="100"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Inventario.StockActual}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Agregar al carrito" Click="BtnAgregarAlCarrito_Click" Margin="0,10,0,0" Width="150"/>
        </StackPanel>

        <!-- Carrito -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Carrito de Compra" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgCarrito" AutoGenerateColumns="False" CanUserAddRows="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                    <DataGridTextColumn Header="Precio U." Binding="{Binding PrecioUnitario}" Width="80"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Total:" FontSize="18" FontWeight="Bold"/>
                <TextBlock x:Name="txtTotalVenta" Text="0" FontSize="18" FontWeight="Bold" Margin="5,0,0,0"/>
            </StackPanel>
            <Button Content="Realizar Venta" Click="BtnRealizarVenta_Click" Margin="0,20,0,0" Width="150" Background="#27ae60" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
