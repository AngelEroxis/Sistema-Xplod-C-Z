<Window x:Class="WPF_LoginForm.View.RegistrarClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Cliente" Height="600" Width="500" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="#f9fafc">
    <Border Margin="20" CornerRadius="10" Background="White" BorderBrush="#dcdde1" BorderThickness="1">
        <StackPanel Margin="20" VerticalAlignment="Center">

            <TextBlock Text="Registrar Nuevo Cliente" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Nombre:"/>
                <TextBox x:Name="txtNombre" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="CI:"/>
                <TextBox x:Name="txtCI" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Número de Ítem:"/>
                <TextBox x:Name="txtNumItem" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Domicilio:"/>
                <TextBox x:Name="txtDomicilio" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Celular:"/>
                <TextBox x:Name="txtCelular" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Empresa o Institución:"/>
                <TextBox x:Name="txtEmpresa" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Garante:"/>
                <TextBox x:Name="txtGarante" />
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Celular del Garante:"/>
                <TextBox x:Name="txtCelGarante" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" Margin="0,0,10,0" Width="80" Background="#bdc3c7" Click="Cancelar_Click"/>
                <Button Content="Guardar" Width="80" Background="#27ae60" Foreground="White" Click="Guardar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
